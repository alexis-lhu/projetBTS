<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Accueil</title>
    <link rel="stylesheet" href="{{ asset('css/swiper.min.css') }}">
    <style>
        /* Votre style personnalisé ici */
        body {
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #fff;
            text-align: center;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .logo {
            align-self: flex-start;
        }

        .logo img {
            width: 125px;
        }

        .buttons {
            display: center;
            justify-content: center;
            flex-grow: 1;
        }

        .buttons a {
            color: #000;
            text-decoration: none;
            margin: 5px 35px;
            font-family: 'Jomhuria', sans-serif;
            font-weight: bold;
            font-size: 35px;
        }

        .icons {
            display: flex;
            justify-content: flex-end;
        }

        .icons img {
            width: 40px;
            margin: 0 10px;
            cursor: pointer;
        }

        .header-bar {
            height: 5px;
            background-color: #ccc;
            width: 100%;
            position: absolute;
            bottom: 0;
            left: 0;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
            right: 0;
            text-align: left;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .icons-small img {
            width: 40px;
            margin: 0 5px;
            cursor: pointer;
        }

        .dropdown-content a {
            display: block;
            padding: 10px;
            color: #000;
            text-decoration: none;
            font-family: 'Jomhuria', sans-serif;
            font-weight: bold;
        }

        .swiper-container {
            width: 2000px;
            margin-top: 40px;
            height: 350px;
        }

        .swiper-slide {
            margin-right: 20px; /* Ajoutez une marge à droite */
        }

        .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .custom-swipe-button {
            position: absolute;
            top: 32.5%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 20px;
            z-index: 1; /* Ajoutez cette ligne pour placer les boutons au-dessus des images */
        }

        .custom-swipe-button-left {
            left: 20px;
        }

        .custom-swipe-button-right {
            right: 20px;
        }

        .nouveautes {
            text-align: center;
            margin-top: 40px;
            font-family: 'Jomhuria', sans-serif;
            font-weight: bold;
            font-size: 35px;
            color: #000;
        }

        .achat-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 80px;
        }

        .achat-container img {
            width: 80px;
            margin-right: 10px;
        }

        .achat-button {
            background-color: black;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-family: 'Jomhuria', sans-serif;
            font-weight: bold;
            font-size: 40px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">  
            <img src="{{ asset('images/Logo2.png') }}" alt="Logo">
        </div>
        <div class="buttons">
            <a href="{{ path('home') }}">ACCUEIL</a>
            <a href="{{ path('categorie', {'type': 'homme'}) }}">HOMME</a>
            <a href="{{ path('categorie', {'type': 'femme'}) }}">FEMME</a>
            <a href="{{ path('categorie', {'type': 'enfant'}) }}">ENFANT</a>
            <a href="{{ path('categorie', {'type': 'accessoire'}) }}">ACCESSOIRE</a>
        </div>

        <div class="icons">
                <a href="{{ path('categorie', {'type': 'panier'}) }}">
        <img src="{{ asset('images/Panier.png') }}" alt="Panier">
    </a>
            <div class="dropdown">
                <div class="icons-small">
                    <img src="{{ asset('images/Compte.png') }}" alt="Compte" style="width: 30px;">
                </div>
                <div class="dropdown-content">
                    <a href="{{ path('categorie', {'type': 'login'}) }}">Se connecter</a>
                    <a href="{{ path('categorie', {'type': 'register'}) }}">S'enregistrer</a>
                </div>
            </div>
        </div>
        <div class="header-bar"></div>
    </header>

    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="{{ asset('images/Chaussure_1.png') }}" alt="Slide 1">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/Chaussure_2.png') }}" alt="Slide 2">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/Chaussure_3.png') }}" alt="Slide 3">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/Chaussure_4.png') }}" alt="Slide 4">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/Chaussure_5.png') }}" alt="Slide 5">
            </div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
        <!-- Add Navigation -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>

        <!-- Ajoutez les boutons personnalisés -->
        <div class="custom-swipe-button custom-swipe-button-left" onclick="customSwipe('prev')">←</div>
        <div class="custom-swipe-button custom-swipe-button-right" onclick="customSwipe('next')">→</div>
    </div>

    <div class="nouveautes">
        NOUVEAUTÉS
    </div>

    <div class="achat-container">
        <img src="{{ asset('images/Chaussure_4.png') }}" alt="Left Image">
        <button class="achat-button">ACHETER</button>
        <img src="{{ asset('images/Chaussure_4.png') }}" alt="Right Image">
    </div>

    <script src="{{ asset('js/swiper.min.js') }}"></script>
    <script src="{{ asset('js/SwipeScript.js') }}"></script>
    <script>
        function customSwipe(direction) {
            var swiper = document.querySelector('.swiper-container').swiper;
            if (direction === 'prev') {
                swiper.slidePrev();
            } else if (direction === 'next') {
                swiper.slideNext();
            }
        }
    </script>
</body>
</html>
